<h1>Listing users</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Show',  admin_user_path(user), :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-success' %></td>
    <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?'} , :class => 'btn btn-danger'  %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user && current_user.is_admin %>
  <%= link_to 'New User', new_admin_user_path , :class => 'btn btn-info' %>
<% end %>

