<h1>Listing makes</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @makes.each do |make| %>
  <tr>
    <td><%= make.name %></td>
    <td><%= link_to 'Show', make , :class => 'btn btn-primary'%></td>
    <td><%= link_to 'Edit', edit_make_path(make) , :class => 'btn btn-success'%></td>
    <td><%= link_to 'Destroy', make, method: :delete, 
    data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Make', new_make_path , :class => 'btn btn-info'%>
