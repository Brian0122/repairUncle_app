<h1>Listing models</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th>Name</th>
    <th>Make</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @models.each do |model| %>
  <tr>
    <td><%= model.name %></td>
    <td><%= model.make.name %></td>
    <td><%= link_to 'Show', model, :class => 'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_model_path(model), :class => 'btn btn-success' %></td>
    <td><%= link_to 'Destroy', model, method: :delete, 
    data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Model', new_model_path , :class => 'btn btn-info'%>
